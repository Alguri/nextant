		<filesystem />
	</types>
	<documentation>
		<admin>https://github.com/daita/nextant/wiki</admin>
	</documentation>
	<category>tools</category>
	<category>files</category>
	<website>https://github.com/daita/nextant/wiki</website>
	<bugs>https://github.com/daita/nextant/issues</bugs>
